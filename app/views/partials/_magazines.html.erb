<section id="magazines">
  <div class="row mx-0">
    <div class="col-md-12 text-center pt-5">
      <h4 class="magazine-title">From the magazine</h4>
    </div>
    <div class="container px-0 pb-5 pt-3">
      <div class="row">
        <div class="col-lg-3 px-0 mr-4">
          <div class="card border-0">
            <img src='<%= asset_path "magazines/first-image.svg" %>' class="card-img-top">
            <div class="card-body pb-4 pt-3">
              <p class="card-text">10 things we wish we knew before climbing Mt Kinabalu</p>
            </div>
          </div>
        </div>
        <div class="col-lg-3 px-0 mr-4">
          <div class="card border-0">
            <img src='<%= asset_path "magazines/second-image.svg" %>' class="card-img-top">
            <div class="card-body pb-4 pt-3">
              <p class="card-text">Best food to try in Kota Kinabalu: Sago Worms?</p>
            </div>
          </div>
        </div>
        <div class="col-lg-3 px-0 mr-4">
          <div class="card border-0">
            <img src='<%= asset_path "magazines/third-image.svg" %>' class="card-img-top">
            <div class="card-body pb-4 pt-3">
              <p class="card-text">6 incredible adventures near Kota Kinabalu</p>
            </div>
          </div>
        </div>
        <div class="col-lg-3 px-0">
          <div class="card border-0">
            <img src='<%= asset_path "magazines/fourth-image.svg" %>' class="card-img-top">
            <div class="card-body pb-2 pt-2">
              <p class="card-text">The many hidden treasures beneath the rough facade of Kota Kinabalu town</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
